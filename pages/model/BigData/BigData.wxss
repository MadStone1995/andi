.table {
  border-right: 0;
  border-bottom: 0;
  width: 100%;
  margin-bottom: 20rpx;
}

.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.th, .td {
  padding: 10px;
  border-bottom: 1px solid #8173D9;
  border-right: 1px solid #8173D9;
  box-sizing: border-box;
  text-align: center;
  width: 100%;
}
.td5{
  border-left: 1px solid #8173D9;
  box-sizing: border-box;
}
.th1, .th2, .th3, .td1, .td2, .td3 {
  width: 32%;
}

.th {
  font-weight: 800;
  background-color: #8173D9;
  font-size: 28rpx;
  color: white;
}

.td {
  font-size: 25rpx;
  color: black;
}