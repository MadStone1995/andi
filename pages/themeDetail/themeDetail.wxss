/* pages/newsdetail/newsdetail.wxss */
.content{
  width: 710rpx;
  margin: 0 20rpx;
}
.consultation-head{
  float:left;
  width: 100%;
  margin-top: 20rpx;
}
.consultation-Img{
  float: left;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.consultation-headright{
  float: left;
  width: 600rpx;
  height: 110rpx;
}
.consultation-Name{
  color: #333;
  font-size: 26rpx;
  height: 55rpx;
  line-height: 55rpx;
}
.consultation-upInfo{
  font-size: 22rpx;
  color: #999;
  height: 50rpx;
  line-height: 50rpx;
}
.consultation-imgList{
  float: left;
  width: 100%;
  margin:40rpx 0;
}
.consultation-imgListallInfo{
 float: left;
  width: 200rpx;
  height: 200rpx;
  margin: 5rpx;
}
.consultation-total{
  width: 100%;
  text-align: center;
}
.consultation-text{
  width: 100%;
  color: #666;
  font-size: 30rpx;
  margin: 20rpx 0rpx;
  text-indent:2em;
}
.detailInfo{
  width: 710rpx;
  margin: 20rpx;
}
.wxParse-img{
  max-width: 710rpx;
}
.submitInfo{
  position: fixed;
  width: 100%;
  height: 90rpx;
  background-color: #F2F2F2;
  bottom: 0;
  left: 0;
}
.submitInfo-input{
  float: left;
  height: 60rpx;
  min-height: 60rpx;
  line-height: 60rpx;
  background-color: #e3e3e3;
  width: 560rpx;
  border-radius: 20rpx;
  margin: 15rpx 20rpx;
  color: #999;
  padding: 0 20rpx;
  font-size: 30rpx;
}
.submitbtn{
  float: left;
  height: 60rpx;
  line-height: 60rpx;
  margin: 15rpx;
  color: #999;
  font-size: 30rpx;
}
.browseInfo{
  float: left;
  width: 100%;
  border-top: 1rpx rgba(204,204,204,1) solid;
  color: #666666;
  font-size: 22rpx;
  height: 45rpx;
  padding-top: 15rpx;
  margin-top: 20rpx;
}
.browse-item{
  display: inline-block;
}
.browseImg{
  width: 42rpx;
  height: 30rpx;
  float: left;
}
.goodImg{
  width: 34rpx;
  height: 30rpx;
  float: right;
  margin-left:20rpx;
}
.newsImg{
  width: 38rpx;
  height: 32rpx;
  float: right;
  margin-left:20rpx;
}
.browse-num{
  float: left;
  margin-left:20rpx;
}

.news-num{
  float: right;
  margin-left:20rpx;
}
.good-num{
  float: right;
  margin-left:20rpx;
}