/* 表格代码   */

.table {
  /* border:1px solid #dadada; */
  border-right: 0;
  border-bottom: 0;
  width: 100%;
  /* height: 100%; *//* margin-left: 1%; */
}

.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.th, .td {
  padding: 10px;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  width: 100%;
}

.th1, .th2, .th3, .td1, .td2, .td3 {
  width: 32%;
}

.th {
  /* 9ff048  82a6f5  */
  font-weight: 800;
  background-color: #6AC7ED;
  font-size: 28rpx;
  color: white;
}

.td {
  font-size: 25rpx;
  color: black;
  background-color: #fff;
}
.loading{
  font-size: 24rpx;
  text-align: center;
}
@keyframes loading{
   0%{
     transform: rotate(0deg);
     }
    100%{
     transform: rotate(360deg);
     }
 }
.loadMore{
  border-radius: 50%;
  margin: 0 auto;
  background-color: #fff;
  width: 30rpx;
  height: 30rpx;
  border: 5rpx solid #9F9F9F;
  border-top: 5rpx solid #fff;
  animation: loading 1s infinite;
  vertical-align:middle;
  display:inline-block;
  margin-right:10rpx;
  margin-top:-5rpx;
}
