/*省市区picker-view样式*/

.picker-view-container {
  position: absolute;
  display: flex;
  flex-direction: column;
  width: 100%;
  bottom: 0;
  background: #fff;
  height: 550px;
}

.picker-view-title {
  display: flex;
  width: 100%;
  height: 80rpx;
  background: mediumseagreen;
  align-items: center;
  justify-content: space-between;
}

.picker-view-title text {
  font-size: 32rpx;
  color: #fff;
}

.area-picker-view {
  width: 100%;
  height: 400rpx;
