page{
  background-color: #F2F2F2;
}
.header{
  width: 100%;
  height: 412rpx;
  color: #fff;
  background-color: #496DAA;
  font-size: 26rpx;
  font-weight: bold;
}
.header-item1{
  width: 100%;
  height: 80rpx;
}
.jifen{
  float: left;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 20rpx;
}
.guize{
  float: right;
  height: 80rpx;
  line-height: 80rpx;
   margin-right: 20rpx;
   text-decoration: underline;
}
.header-item2{
  height: 230rpx;
  width: 100%;
}
.box1{
  float: left;
  width:222rpx;
  height:222rpx;
  background:radial-gradient(circle,rgba(143,176,233,0.52) 0%,rgba(149,180,232,0) 100%);
border-radius:50%;
  margin: 10rpx 264rpx;
}
.box2{
  float: left;
  width:188rpx;
  margin: 17rpx;
  height:188rpx;
  background:rgba(164,195,246,1);
  border-radius:50%;
}
.box3{
  float: left;
  margin: 14rpx;
  width:160rpx;
  height:160rpx;
  background:rgba(214,230,255,1);
  border-radius:50%;
}
.box-text{
  width:160rpx;
  height:60rpx;
   line-height: 60rpx;
  font-size: 38rpx;
  color: #496DAA;
  text-align: center;
}
.margintop{
  margin-top: 20rpx;
}
.qd-info{
  float: left;
  width:710rpx;
  height:750rpx;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(255,255,255,1);
  box-sizing: border-box;
  box-shadow:0rpx 0rpx 15rpx 0rpx rgba(153,153,153,0.4);
  border-radius:30rpx;
  margin:-70rpx 20rpx 0 20rpx;
}
.qdiconlist{
  margin-top:-20rpx;
}
.icon1{
  width: 31rpx;
  height: 59rpx;
  margin-left: 62rpx;
}
.nowdate{
  font-size: 34rpx;
  color: #333333;
  font-weight: bold;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  width: 100%;
}
.week{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding:0rpx 40rpx;
  background-color:#CCDDF7;
  height: 75rpx;
  line-height: 75rpx;
  font-size: 34rpx;
  font-weight: bold;
  margin-top:15rpx;
}
.qd-info .days{
  padding: 10rpx;
  background-color: #fff;
}

.qd-info .columns{
  display: flex;
  flex-direction: column;
  justify-content: space-between; 
}

.qd-info .columns .rows{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.qd-info .columns .rows .cell{
  width: 84rpx;
  height: 88rpx;
  margin: 3rpx;
  text-align: center;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}
.haveqiandao{
  position: absolute;
  width: 40rpx;
  height: 45rpx;
  left: 22rpx;
  top: 22rpx;
  z-index: -1;
}
.cellInfo{
  position: absolute;
  width: 84rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  left: 0;
  top: 0;
  z-index:1;
}