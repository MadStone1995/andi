page{
  background-color: #F0F4F7;
}
.shipaddress {
  width: 96%;
  margin: 0 auto;
  margin-top: 20rpx;
}

.shipaddList {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 4%;
  background: #fff;
  border-radius: 5px;
  margin-bottom: 10px;
}

.shipaddLeft {
  flex: 1;
}

.namenum {
  margin: 10px auto 8px;
}

.namenum .shipname {
  font-size: 16px;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(34, 34, 34, 1);
  flex: 1;
  margin-right: 12px;
}

.namenum .shipnum {
  font-size: 14px;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.showaddress {
  display: flex;
  margin-bottom: 15px;
}

.defaultaddress {
  width: 35px;
  height: 20px;
  line-height: 20px;
  background: rgba(0, 144, 255, 0.1);
  border-radius: 5px;
  font-size: 12px;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  text-align: center;
  margin-right: 13px;
}

.addressdetail {
  font-size: 14px;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
  line-height: 16px;
}

.shipaddRight {
  font-size: 14px;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  padding: 0 15px;
  border-left: 1px solid #e9e9e9;
  height: 20px;
  word-break: keep-all;
  white-space: nowrap;
  margin-left: 15px;
}

.noshipadd {
  width: 100%;
  text-align: center;
  margin-top: 50%;
  font-size: 16px;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.addshipadd {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50px;
  font-size: 16px;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 50px;
  text-align: center;
   background-color:#387beb;
}
