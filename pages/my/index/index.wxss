/*  */
page{
  background-color: #F2F2F2;
}
button {
  background-color: #fff;
  line-height: 85rpx;
  padding: 0;
  font-size: 28rpx;
  border-radius: 0;
}

button::after {
  border: none;
}

.button-hover {
  background-color: #fff;
}
.center {
  text-align: center;
}
.headerInfo{
  float: left;
  width: 100%;
   background-color: #fff;
}
.my__header {
  display: flex;
  flex-direction: column;
  padding: 0 10px 10px;
  border-bottom: 1px solid #f2f2f2;
  background: #95B4E8;
  height: 325rpx;
  margin-bottom: 28px;
  border-bottom-right-radius: 100rpx;
  border-bottom-left-radius: 100rpx;
  position: relative;
}
.user{
  float: left;
}
.header-img{
  float: left;
  width: 150rpx;
  height: 150rpx;
  margin: 30rpx 20rpx 0 50rpx;
  border-radius: 50%;
}
.user-info{
  float: left;
}
.user-name{
  color: #fff;
  font-weight: 34rpx;
  margin-top: 65rpx;
}
.user-welcome{
  color: #fff;
  font-size: 24rpx;
}
.qdview{
  float: right;
  margin-top: 30rpx;
  margin-right: 30rpx;
  text-align: center;
  width: 100rpx;
}
.qdimg{
  width: 45rpx;
  height: 42rpx;
}
.qdtext{
  font-size: 20rpx;
  color: #fff;
  font-weight: bold;
}
.user-num{
  float: left;
  width:650rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 10rpx 0px rgba(53,79,124,0.3);
  border-radius:10rpx;
  margin-top: 70rpx;
  margin-left: 40rpx;
}
.user-numItem{
  float: left;
  width: 50%;
  height: 75rpx;
  margin: 35rpx 0rpx;
}
.rightBorder{
  border-right: 1rpx rgba(221,221,221,0.5) solid;
  box-sizing: border-box;
}
.user-numItem image{
  float: left;
  width: 60rpx;
  height: 60rpx;
  margin-left: 60rpx;
  margin-right: 20rpx;
  margin-top:8rpx;
}
.numItem-Info{
  float: left;
}
.numItem-text{
  font-size: 24rpx;
  color: #999;
}
.numItem-num1{
  font-size: 32rpx;
  font-weight: bold;
  color: #49BCF0;
}
.numItem-num2{
  font-size: 32rpx;
  font-weight: bold;
  color: #FA9450;
}
.navList{
  text-align: center;
  font-size: 24rpx;
  color: #333333;
  float: left;
  background-color: #fff;
  width: 750rpx;
  height: 140rpx;
  padding-top: 60rpx;
}
.navList-item{
  float: left;
  width: 25%;

}
.navList-img{
  width: 60rpx;
  height: 60rpx;
}
.navList-text{
  margin-top: 20rpx;
}
.funList{
  float: left;
  margin-top: 20rpx;
  background-color: #fff;
  padding: 0 20rpx;
  padding-bottom: 20rpx
}
.funList-item{
  float: left;
  width: 710rpx;
  height: 85rpx;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #333333;
  border-bottom: 1rpx #F2F2F2 solid;
  box-sizing: border-box;
}
.funList-text{
  float: left;
  margin-left: 10rpx;
  height: 45rpx;
  line-height: 45rpx;
}
.funList-img{
  float: left;
  width: 25rpx;
  height: 25rpx;
  margin-top: 10rpx;
}
.funList-jt{
  float: right;
  width: 14rpx;
  height: 24rpx;
   margin-top: 10rpx;
}
.buttonItem{
  float: left;
}