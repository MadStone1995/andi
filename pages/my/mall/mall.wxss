/* pages/my/mall/mall.wxss */
.header{
  width:750rpx;
  height:190rpx;
  background:rgba(250,148,80,1);
}
.user-Item{
  float: left;
  height: 190rpx;
  width: 50%;
  color: #fff;
}
.header-img{
  float: left;
  width: 120rpx;
  height: 120rpx;
  margin: 35rpx 30rpx 35rpx 60rpx;
  border-radius: 50%;
}
.user-name{
  width: 165rpx;
  float: left;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-right: 1rpx #fff solid;
  box-sizing: border-box;
  margin-top: 55rpx;
  overflow:hidden;

}
.item-total{
  float: left;
  width: 90%;
  margin-left: 10%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  margin-top:40rpx;
}
.item-num{
  float: left;
  width: 90%;
  margin-left: 10%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 60rpx;
  color: #fff;
  font-weight: bold;
}
.banner1{
  width: 710rpx;
  height: 200rpx;
  margin: 20rpx;
}
.banner1 image{
  width: 710rpx;
  height: 200rpx;
}
.banner2{
  width: 750rpx;
  height: 180rpx;
}
.wj-info{
  width: 710rpx;
  margin: 0 20rpx;
  padding-top: 30rpx;
}
.wj-total{
  font-size: 28rpx;
  color: #333333;

}
.item-total2{
  float: left;
  font-size: 24rpx;
  color: #666666;
  margin: 20rpx 0rpx;
}
.checkbox{
  float: left;
  width: 100%;
  padding-left: 30rpx;
  border: 1rpx #DDDDDD solid;
  border-top: none;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  height: 140rpx;
  line-height: 140rpx;
}
.protxt{
  float: left;
  line-height: 140rpx;
  height: 140rpx;
  font-size: 24rpx;
  max-width: 350rpx;
  overflow: hidden;
}
.chooseItembox{
  float: left;
}
.checkboxtop{
   border-top: 1rpx #DDDDDD solid;
}
.chooseNum{
  float: right;
  margin-right: 30rpx;
}
.chooseItem{
  background-color: #DDDDDD;
}
.btn{
  float: left;
  width:710rpx;
  height:70rpx;
  background:rgba(250,148,80,1);
  border-radius:35rpx;
  margin: 20rpx;
  text-align: center;
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  line-height: 70rpx;
}
.btn2{
  float: left;
  width:710rpx;
  height:70rpx;
  background:#999;
  border-radius:35rpx;
  margin: 20rpx;
  text-align: center;
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  line-height: 70rpx;
}
.proImg{
  float: left;
  width: 134rpx;
  height: 134rpx;
  margin: 3rpx;
}
